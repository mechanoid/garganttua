{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "compilerOptions": {
    "baseUrl": "./dist/ts",
    "paths": {
      "zod": ["../node_modules/zod"]
    },
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "module": "es6",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/ts"
  },
  "include": [
    // whatever paths you intend to lint
    "**/*.ts",
    "node_modules/zod/lib/**/*.js"
  ]
}

